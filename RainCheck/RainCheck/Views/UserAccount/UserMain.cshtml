@model IEnumerable<RainCheck.Models.policy_tbl>


<h3>Welcome @Session["logged_username"]</h3>

@*display current policy*@ 

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#menu1">Policy</a></li>
    <li><a data-toggle="tab" href="#menu2">Policy history</a></li>
    <li><a data-toggle="tab" href="#menu3">edit coverage</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="menu1">
        <div id="BillsAndOffers" class="tabcontent">

            @foreach (var policy in Model)
            {
                <h2>@policy.policy_id</h2>
                <p>total price -: @policy.policy_amount </p>
                <p>amount due -: @(policy.policy_amount / 12)</p>
                <p>due date -: @policy.end_date</p>
            }
        </div>
    </div>
    <div class="tab-pane" id="menu2">
        <h1>world</h1>
    </div>
    <div class="tab-pane active" id="menu3"></div>
</div>
