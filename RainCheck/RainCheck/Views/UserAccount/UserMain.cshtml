@model IEnumerable<RainCheck.Models.policy_tbl>

<h3>Welcome @Session["logged_username"]</h3>
@*display current policy*@
<div class="row">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#policy" data-toggle="tab">Your Policy</a>
        </li>
        <li>
            <a href="#policyHist" data-toggle="tab">Policy History</a>
        </li>
        <li>
            <a href="#change" data-toggle="tab">Change Your policy</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="policy">
            @foreach (var policy in Model)
            {
                <h2>@policy.policy_id</h2>
                <p>Policy Number -:@policy.policy_number</p>
                <p>total price -: $@policy.policy_amount </p>
                <p>amount due -: $@(policy.policy_amount / 12)</p>
                <p>due date -: @policy.end_date.ToString("dd/MM/yyyy")</p>
            }
        </div>
        <div class="tab-pane" id="policyHist">
            <table class="table">
                <thead>
                    <tr>
                        <td>policy #</td>
                        <td>Start Date</td>
                        <td>End Date</td>
                        <td>Amount</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var policy in Model)
                    {
                        <tr>
                            <td> @policy.policy_id </td>
                            <td> @policy.start_date</td>
                            <td> @policy.end_date</td>
                            <td> @policy.policy_amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane" id="change">
            <p>Bodily Injury & Property Damage:- </p>
        </div>
    </div>
</div>